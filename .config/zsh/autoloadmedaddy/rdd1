#!/bin/zsh
# dir of alba -> dir of artist/alba or dir of mp3 if dirs don't follor format
# assumes artist, album, year tags exist
function rdd1() {
local t1 t2 t3 z d;
t1=$(mktemp /tmp/rdd1.XXXXXXXX); t2=$(mktemp /tmp/rdd1.XXXXXXXX);
ls . > ${t1};
while IFS= read -r d; do;
  if [[ -d ${d} ]]; then;
    find ${d} -regextype posix-extended -iregex ".*(mp3|wav|flac|acc|m4a|ogg)" -type f > ${t2};
    if ! [ -s ${t2} ]; then printf "No .mp3's found!"; return 1; fi;
    while IFS= read -r m; do;
      z="$(mp3info2 -D -p '%a [%l (%y)]' ${m})";
      mkdir ${z};
      mv ${m} ${z};
      mv ${d}/*jpg ${z} || mv ${d}/*png ${z} || mv ${d}/*jpeg ${z};
    done < ${t2};
    rmdir * 2&> /dev/null;
  fi;
done < ${t1};

ls . > ${t1};
while IFS= read -r d; do;
  mkdir -p ${d%% \[*}; 
  if [[ ${d} =~ ',[0-9]{4})]' ]]; then;
    mv ${d} ${d/,[0-9](#c4))]/)]};
    mv ${d/,[0-9](#c4))]/)]} ${d%% \[*}; 
  else;
    mv ${d} ${d%% \[*}; 
  fi;
done < ${t1};
rmdir ${d}*; rm ${t1} ${t2};
}
#!/bin/zsh
# wallpaper setter script for X
a=(
  '--bg-center'
  '--bg-fill'
  '--bg-max'
  '--bg-scale'
  '--bg-tile'
);
c=~/im/wp; # starting direcotry
cd $c;
s=$(pcre2grep -o1 "feh --no-fehbg (.+?) '.+'" ~/.fehbg);
setopt nonomatch

while true; do
  if [[ -d $c ]]; then;
    d=(*(/D-));
    [[ $d[1] = '*(/D-)' ]] && d[1]=(); 
    f=(*(.D-)); 
    [[ $f[1] = '*(.D-)' ]] && f[1]=(); 
  fi;
  c=$(printf '%s\n' .. $d $f rand opts | dmenu -i -p "$(pwd) ") || break; 

  if [[ -d $c ]]; then
    cd $c && c=.;
  elif [[ -f $c ]]; then;
    feh $s $c || break;
  elif [[ $c = 'opts' ]]; then;
    s=$(dmenu -i -p 'options ' <<< ${(F)a}) && feh $s "$(pcre2grep -o1 "'(.*)'" ~/.fehbg)";
  elif [[ $c = 'rand' ]]; then;
    feh $s ${f[RANDOM % $#f + 1]} || break;
  fi;
done;
unset c a f s d;
setopt nomatch;

#!/bin/zsh
xidfile='/tmp/tabbed-surf.xid';
((# > 0)) || uri='file:///root/.config/startpage/ss1.htm';
xid=$(<${xidfile}) &>/dev/null;

{ [[ -r ${xidfile} ]] && xprop -id ${xid} } &>/dev/null || {
  tabbed -dn tabbedsurf -r 2 surf -e '' 'file:///root/.config/startpage/ss1.htm' >${xidfile} &>>/tmp/_surflog &;
  unset uri; xid=$(<${xidfile}) &>/dev/null;
};

for u ( ${uri:-${@}} ) { surf -e ${xid} ${u} &>>/tmp/_surflog & };

for a ( {1..${#file}} ) { wget -q -O ${t}/${a} ${file[a]} & }; printf '%s\n' 'Downloading hosts files.' 'Fucking wait.' ${(l.COLUMNS..-.)}; wait;

pup -f ${t}/3 -p '.BODY' | tail -n +108 > ${t}/q; mv ${t}/q ${t}/3;

# https://unix.stackexchange.com/questions/29724/how-to-properly-collect-an-array-of-lines-in-zsh
perl -ne 's/^#0\.0\.0\.0 (\S+)$/$1/ && print' /etc/hosts >> ~/dcs/holdme;
sort -uo ~/dcs/holdme ~/dcs/holdme;

printf '%s\n' \
  '127.0.0.1 localhost' \
  '127.0.0.1 localhost.localdomain' \
  '127.0.0.1 local' \
  '255.255.255.255 broadcasthost' \
  '::1 localhost' \
  '::1 ip6-localhost' \
  '::1 ip6-loopback' \
  'fe80::1%lo0 localhost' \
  'ff00::0 ip6-localnet' \
  'ff00::0 ip6-mcastprefix' \
  '0.0.0.0 0.0.0.0' > /etc/hosts;

sort -u <(perl -pe '
  s/.*\b((local|broadcast)host|loopback|ip6-\w+)\b.*//n;
  s/[ \t\f\r]+/ /g;
  s/#+/#/g;
  s/^ +//;
  s/^#? ?:+ ?//;
  s/^#\s*0\.0\.0\.0 /0.0.0.0 /n;
  s/^#.*$//;
  s/^(.+)#.*$/$1/;
  s/(^(?!0\.0\.0\.0).+)/0.0.0.0 $1/;
  s/^0\.0\.0\.0 127\.0\.0\.1/0.0.0.0/;
  s/ +$//' ${t}/* | tr -s '\n') ~/dcs/{blockme,redirections} > ${t}/h;

# if [[ -s holdme ]] {

#printf '(window.onload = function() {\nconst blockme = [ %s ];\nfunction removal(value) {\n\tdocument.querySelectorAll(value).forEach(el => el.remove());\n}\nblockme.forEach(removal);\n})' ${(j., .)${(f)"$(<~/.config/wyebadblock/easylist.txt)"//(#m)[.\\\+\*\?\(\)\{\}\[\]\!\^\$\=\<\>\|\:\-]/\\${MATCH}}} > ~/.surf/script/elmblock.js;


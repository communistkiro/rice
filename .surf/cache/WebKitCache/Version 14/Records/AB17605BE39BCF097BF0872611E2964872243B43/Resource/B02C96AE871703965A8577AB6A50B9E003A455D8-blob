<script type="text/javascript" defer>
	jQuery( function() {
		setFooter();
		jQuery(window).on('resize', setFooter);

		// fixed header
		function fixedHeader() {
   	 		if (window.pageYOffset>160) {
        			jQuery('#header').addClass('collapsed');
   			}
    			else {
        			jQuery('#header').removeClass('collapsed');
    			}
		}

		// Excerpt Height
        	function ellipsizeExcerpts() {
            		jQuery('.posts .post .excerpt').each( function() {
                		var wordArray = jQuery(this).text().split(' ');
                		if (jQuery(this)[0].scrollHeight == jQuery(this)[0].offsetHeight) {
              		      		jQuery(this)[0].innerHTML = '<p>' + wordArray.join(' ') + '</p>';
                		}
                		while(jQuery(this)[0].scrollHeight > jQuery(this)[0].offsetHeight) {
                    			wordArray.pop();
                    			jQuery(this)[0].innerHTML = '<p>' + wordArray.join(' ') + '...</p>';
                		}
           		});
       		}

		jQuery(window).on("load resize",function(e){
			 ellipsizeExcerpts();
		});

		jQuery(window).on("load resize scroll",function(e){
    			fixedHeader();
		});
	});

	function setFooter() {
		if (jQuery('body').height()<jQuery(window).height()) {
			jQuery('footer').addClass('sticky');
		}
		else {
			jQuery('footer').removeClass('sticky');
		}
	}
	jQuery('#mobileMenuToggle').on('click', function() {
		jQuery('#mobileMenu').toggle();
	});


	// Add Bootstrap classes to the theme
	jQuery('.searchform').addClass('form-inline');
	jQuery('.searchform input').addClass('form-control');
	jQuery('.searchform button').addClass('btn btn-primary');
	jQuery('.form-submit input[type="submit"]').addClass('btn btn-primary');
	jQuery('.comment-form textarea').addClass('form-control');
	jQuery('.comment-form input[type="text"], .comment-form input[type="email"], .comment-form input[type="url"]').addClass('form-control input-lg');
	jQuery('.bar li a').addClass('btn btn-ghost alt');
	jQuery('#commentform').removeClass('form-horizontal');


	jQuery('#header li.dropdown').hoverIntent(
        	function() { jQuery(this).find('ul').addClass('open') },
        	function() { jQuery(this).find('ul').removeClass('open') }
    	);

var dropdown = document.getElementById("cat");
function onCatChange() {
	if ( dropdown.options[dropdown.selectedIndex].value > 0 ) {
		location.href = "https://protonmail.com/blog/?cat="+dropdown.options[dropdown.selectedIndex].value;
	}
}
if (typeof dropdown !== 'undefined') {
	dropdown.onchange = onCatChange;
}

var originalFeaturedExcerptText = jQuery('.home .featured .excerpt p').eq(0).text().slice(0, -3);

function featuredExcerptSize() {

	// only for homepage
	if (!jQuery('body.home').length) { 
		return;
	}

	// we need to hide text before getting the height.
	jQuery('.home .featured .excerpt').hide();
	var featuredHeight = jQuery('.home .featured').outerHeight();
	var featuredTitleHeight = jQuery('.home .featured h3').outerHeight();
	var featuredLinkHeight = jQuery('.home .featured .btn-ghost').outerHeight();
	var padding = 160;
	var excerptHeight = featuredHeight - (featuredTitleHeight + featuredLinkHeight + padding);
	// console.log(featuredHeight, featuredTitleHeight, featuredLinkHeight, excerptHeight);
	jQuery('.home .featured .excerpt').show();
	ellipsis(excerptHeight);
}

function ellipsis(number) {
	if (number < 1) {
		jQuery('.home .featured .excerpt p').text('');
	}
	else {
		// 40 characters = 26 height roughly.
		var rows = number/26;
		var chars = rows * 40;
		var text = originalFeaturedExcerptText;
		text = text.substring(0, chars);
		jQuery('.home .featured .excerpt p').text(text + '...');
	}
}

// event listener
jQuery(window).on('load resize', function() {
	featuredExcerptSize();
});

// ARIA screen reader for links
jQuery('.single .entry-content a').each( function() {
    var label = jQuery(this).attr('aria-label');
    var target = jQuery(this).attr('target');
    if (label === undefined) {
        var text = jQuery(this).text();
        if (target === '_blank') {
            text += ' (opens in a new tab)';
        }
        jQuery(this).attr('aria-label', text);
    }
});
</script>


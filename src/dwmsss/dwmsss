#!/bin/sh
while true; do
    z=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/tx_bytes);
    x=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/rx_bytes);
    xsetroot -fg "#9ffb00" -bg "#171313" -name "$(for f in /tmp/countdown.*; do if [ -e "$f" ]; then printf "‚è≥%s " "$(cat /tmp/countdown.*)"; fi; break; done)$(if ps -C mpd > /dev/null && mpc status | grep -q 'playing'; then printf "%s [%s #%s (%s)] %s " "$(mpc current -f %artist%)" "$(mpc current -f %album%)" "$(mpc current -f %track%)" "$(mpc current -f %date%)" "$(mpc current -f %title%)"; fi)$(printf "[%.2süî•%.2s  %.2süêè%.2s]" "$(cat /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input)" "$(cat /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp3_input)" $(echo "100 * $(free | awk '(NR == 2) {print $3}') / $(free |awk '(NR == 2) {print $2}')" | bc) $(echo "100 * $(free | awk '(NR == 3) {print $3}') / $(free | awk '(NR == 3) {print $2}')" | bc))[$(CONSTATE=$(wpa_cli status | sed -n '/wpa_state/s/^.*=//p'); case $CONSTATE in 'COMPLETED') CONSSID=$(wpa_cli status | sed -n '/\<ssid\>/s/^.*=//p'); CONIP=$(wpa_cli status | sed -n '/ip_address/s/^.*=//p'); printf "%s %s %s‚•Æ%s" "$CONSSID" "$CONIP" $(echo "$z - $c" | bc | numfmt --to iec) $(echo "$x - $v" | bc | numfmt --to iec); z=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/tx_bytes); x=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/rx_bytes);; 'DISCONNECTED') printf "%s" "$CONSTATE";; 'INTERFACE_DISABLED') printf "%s" "$CONSTATE";; 'SCANNING') printf "%s" "$CONSTATE";; 'ASSOCIATING') printf "%s" "$CONSTATE";; 'ASSOCIATED') printf "%s" "$CONSTATE";; 'AUTHENTICATING') printf "%s" "$CONSTATE";; '4WAY_HANDSHAKE') printf "%s" "$CONSTATE";; 'GROUP_HANDSHAKE') printf "%s" "$CONSTATE";; 'INACTIVE') printf "%s" "$CONSTATE";; esac)][$(date '+%F %H:%M:%S')]"
    sleep 1;
    c=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/tx_bytes);
    v=$(cat /sys/devices/pci0000:00/0000:00:1c.1/0000:03:00.0/net/wlp3s0/statistics/rx_bytes);
done;
# ‚ôà
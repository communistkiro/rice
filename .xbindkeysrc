# Increase volume
"amixer set Master 2+"
   XF86AudioRaiseVolume

# Decrease volume
"amixer set Master 2-"
   XF86AudioLowerVolume

# Mute volume
"amixer set Master toggle"
   XF86AudioMute

# Increase backlight
"xbacklight -inc 0.75"
   XF86MonBrightnessUp

# Decrease backlight
"xbacklight -dec 0.75"
   XF86MonBrightnessDown

# Lock screen
"setxkbmap us && export LANG=en_US.UTF-8 && xbacklight -set 0 && slock && xbacklight -set 12"
  XF86ScreenSaver

# Next track
"mpc next"
  XF86AudioNext

# Previous track
"mpc prev"
  XF86AudioPrev

# Pause playback
"mpc toggle"
  XF86AudioPlay

# Stop playback
"mpc stop"
  XF86AudioStop



# Kill everything bad
"pkill -9 -i 'firefox|cataclysm|gimp|subl3'"
  alt + Print





